<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:id="@+id/linear_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- タイトル -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_round_history"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="20dp" />

        <!-- JavaScriptカード (見た目のみ) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_js"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface"/>

        <!-- ホーム設定カード (見た目のみ) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface"/>

        <!-- ダウンロード履歴カード（RecyclerView を内包） -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_downloads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:id="@+id/icon_downloads"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/code_24dp_e8eaed_fill0_wght400_grad0_opsz24"
                        android:contentDescription="@string/cd_downloads_icon"
                        app:tint="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/downloadsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/downloads_title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewDownloads"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:overScrollMode="never" />

                <TextView
                    android:id="@+id/emptyView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_history"
                    android:padding="16dp"
                    android:visibility="gone"
                    android:textColor="?attr/colorOnSurface" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 設定を保存カード（見た目のみ） -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface"/>

        <!-- ライセンスカード -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface"/>

        <!-- クレジットカード -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_credit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface"/>

    </LinearLayout>
</ScrollView>


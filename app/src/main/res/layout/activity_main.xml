<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Material3 の LinearProgressIndicator に置き換え（ID はそのまま） -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_gravity="top"
            android:visibility="gone"
            app:trackThickness="6dp" />

        <!-- secureWarning -->
        <LinearLayout
            android:id="@+id/secureWarningLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="96dp"
            android:visibility="gone"
            android:background="@android:color/transparent"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/warningIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/warning_24dp_e8eaed_fill0_wght400_grad0_opsz24" />

            <TextView
                android:id="@+id/secureWarningMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/secure_warning_message"
                android:textSize="14sp"
                android:paddingStart="8dp" />
        </LinearLayout>

        <!-- URL overlay: EditText を Material TextInputLayout + TextInputEditText に差し替え（ID は旧 urlInput をそのまま使用） -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/urlOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="12dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="bottom|center_horizontal"
            android:visibility="gone"
            android:translationY="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/urlInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_url_input"
                        android:inputType="textUri"
                        android:imeOptions="actionGo"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/goButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/go_button_text"
                    style="?attr/materialButtonOutlinedStyle"
                    android:insetLeft="8dp"
                    android:insetRight="8dp" />

                <ImageButton
                    android:id="@+id/closeSearchButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_close_clear_cancel" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 元のフローティングツール（ID は絶対変更してない） -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/floatingToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/arrow_back_24dp_e8eaed_fill0_wght400_grad0_opsz24" />

                <ImageButton
                    android:id="@+id/forwardButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/arrow_forward_24dp_e8eaed_fill0_wght400_grad0_opsz24" />

                <ImageButton
                    android:id="@+id/homeButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/home_24dp_e8eaed_fill0_wght400_grad0_opsz24" />


                <ImageButton
                    android:id="@+id/refreshButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/refresh_24dp_e8eaed_fill0_wght400_grad0_opsz24" />

                <ImageButton
                    android:id="@+id/tabButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/menu_open_24dp_e8eaed_fill0_wght400_grad0_opsz24" />

                <ImageButton
                    android:id="@+id/searchButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/search_24dp_e8eaed_fill0_wght400_grad0_opsz24" />

                <!-- 設定のハンバーガー（IDそのまま） -->
                <ImageButton
                    android:id="@+id/menuButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/menu_24dp_efefef_fill0_wght400_grad0_opsz24" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- menu overlay（ハンバーガーで表示）:
             下に寄せて、表示は「設定」「ダウンロード」「PCモード」のみ -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/menuOverlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="24dp"
            android:visibility="gone"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="4dp">

                <ImageButton
                    android:id="@+id/menu_settings"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/settings_24dp_e8eaed_fill0_wght400_grad0_opsz24"
                    android:contentDescription="@string/menu_settings_cd" />

                <ImageButton
                    android:id="@+id/menu_download"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="8dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/download_24dp_efefef_fill0_wght400_grad0_opsz24"
                    android:contentDescription="@string/menu_download_cd" />

                <ImageButton
                    android:id="@+id/pcModeButton_menu"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="8dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/desktop_windows_24dp_efefef_fill0_wght400_grad0_opsz24"
                    android:contentDescription="@string/pc_mode_cd" />

                <ImageButton
                    android:id="@+id/MusicDisplay"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/music_note_24dp_e3e3e3_fill0_wght400_grad0_opsz24" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

</androidx.drawerlayout.widget.DrawerLayout>
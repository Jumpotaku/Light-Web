<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- メインのコンテンツ部分 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- WebView部分 -->
        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />

        <!-- ProgressBar（読み込み進捗用） -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- URL入力欄部分 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center">

            <!-- URL入力欄 -->
            <EditText
                android:id="@+id/urlInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:hint="URLを入力"
                android:inputType="textUri"
                android:padding="8dp"
                android:textSize="14sp" />

            <!-- URLに飛ぶボタン -->
            <ImageButton
                android:id="@+id/goButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="URLに飛ぶボタン"
                android:scaleType="centerInside"
                android:src="@drawable/search_24dp_e8eaed_fill0_wght400_grad0_opsz24" />
        </LinearLayout>

        <!-- アイコン部分 (URLが暗号化されていない場合に警告表示) -->
        <LinearLayout
            android:id="@+id/secureWarningLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center"
            android:visibility="gone">

            <!-- 警告アイコン -->
            <ImageButton
                android:id="@+id/warningIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/warning_24dp_e8eaed_fill0_wght400_grad0_opsz24"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="暗号化されていない警告"
                android:scaleType="centerInside" />

            <!-- 警告メッセージ -->
            <TextView
                android:id="@+id/secureWarningMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="このサイトは暗号化されていません。第三者に情報が渡る可能性があります。"
                android:textSize="14sp"
                android:paddingStart="8dp"
                android:gravity="center_vertical" />
        </LinearLayout>

        <!-- ボタン群部分 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <!-- 戻るボタン -->
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/arrow_back_24dp_e8eaed_fill0_wght400_grad0_opsz24"
                android:contentDescription="戻るボタン"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside"
                android:layout_marginEnd="8dp" />

            <!-- 進むボタン -->
            <ImageButton
                android:id="@+id/forwardButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/arrow_forward_24dp_e8eaed_fill0_wght400_grad0_opsz24"
                android:contentDescription="進むボタン"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside"
                android:layout_marginEnd="8dp" />

            <!-- ホームボタン -->
            <ImageButton
                android:id="@+id/homeButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="ホームボタン"
                android:scaleType="centerInside"
                android:src="@drawable/home_24dp_e8eaed_fill0_wght400_grad0_opsz24" />

            <!-- リロードボタン -->
            <ImageButton
                android:id="@+id/refreshButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/refresh_24dp_e8eaed_fill0_wght400_grad0_opsz24"
                android:contentDescription="リロードボタン"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside"
                android:layout_marginEnd="8dp" />

            <!-- 設定ボタン -->

            <!-- タブボタン -->
            <ImageButton
                android:id="@+id/tabButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="タブボタン"
                android:scaleType="centerInside"
                android:src="@drawable/menu_open_24dp_e8eaed_fill0_wght400_grad0_opsz24" />

            <ImageButton
                android:id="@+id/settingsButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="設定ボタン"
                android:scaleType="centerInside"
                android:src="@drawable/settings_24dp_e8eaed_fill0_wght400_grad0_opsz24" />
        </LinearLayout>
    </LinearLayout>

    <!-- サイドメニュー部分 -->
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp">

        <!-- メニュー項目 -->
        <TextView
            android:id="@+id/menuItem1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="メニュー項目1"
            android:textSize="18sp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/menuItem2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="メニュー項目2"
            android:textSize="18sp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- タイトル -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="20dp" />

        <!-- JavaScriptカード -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/code_24dp_e8eaed_fill0_wght400_grad0_opsz24"
                    android:contentDescription="@string/cd_js_icon"
                    android:layout_marginEnd="16dp"
                    app:tint="?attr/colorOnSurface" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/js_settings_title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="6dp" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/jsEnabledSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/js_enable_text"
                        android:checked="true"
                        android:textColor="?attr/colorOnSurface" />


                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ホーム設定カード -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/cd_home_icon"
                    android:src="@drawable/home_24dp_e8eaed_fill0_wght400_grad0_opsz24"
                    android:tint="?attr/colorOnSurface" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="@string/home_settings_title"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_google"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/home_first_google_text"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 設定を保存カード -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/style_24dp_e3e3e3"
                    android:contentDescription="@string/cd_save_icon"
                    android:layout_marginEnd="16dp"
                    app:tint="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/theme_text"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:padding="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 設定を保存カード -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/refresh_24dp_e8eaed_fill0_wght400_grad0_opsz24"
                    android:contentDescription="@string/cd_save_icon"
                    android:layout_marginEnd="16dp"
                    android:tint="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/saveSettingsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/save_settings_text"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:padding="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ライセンスカード -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/license_24dp_e8eaed_fill0_wght400_grad0_opsz24"
                    android:contentDescription="@string/cd_license_icon"
                    android:layout_marginEnd="16dp"
                    android:tint="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/licenseButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/license_text"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:padding="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- クレジットカード -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/person_24dp_e8eaed_fill0_wght400_grad0_opsz24"
                    android:contentDescription="@string/cd_credit_icon"
                    android:layout_marginEnd="16dp"
                    android:tint="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/creditButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/credit_text"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:padding="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 空のカード（そのまま） -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface"/>

    </LinearLayout>
</ScrollView>
